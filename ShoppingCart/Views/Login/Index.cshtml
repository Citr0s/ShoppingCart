@model dynamic

@{
    ViewBag.Title = "Login";
}

<h1>Login</h1>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("CheckCredentials", "Login", FormMethod.Post))
                {
                    <fieldset>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Email", id = "email" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    @Html.Password("password", "", new { @class = "form-control", placeholder = "Password", id = "password" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group" style="margin-top: 25px;">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>