@model ShoppingCart.Controllers.Basket.BasketControllerHistoryData

@{
    ViewBag.Title = "title";
}

<h1>History</h1>

<div class="row">
    <div class="col-md-12">
        @if (Model.BasketDetails.Any())
        {
            foreach (var basketItem in Model.BasketDetails)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <div class="row">
                                <div class="col-md-6">
                                    Orders
                                </div>
                                <div class="col-md-6" style="text-align: right; font-weight: bold; color: #27ae60;">
                                    @basketItem.Total.InFull
                                </div>
                            </div>
                        </h3>
                    </div>
                    <div class="panel-body">
                        @if (basketItem.Orders.Count > 0)
                        {
                            <ul>
                                @foreach (var order in basketItem.Orders)
                                {
                                    <li>
                                        @order.Pizza.Name <small>@order.Size.Name</small>
                                        @*@if (order.Basket..Count > 0)
                                        {
                                            <ul>
                                                <li></li>
                                            </ul>
                                        }*@
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <small>No extra toppings selected.</small>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <h4>There are no items in the history!</h4>
                </div>
            </div>
        }
    </div>
</div>